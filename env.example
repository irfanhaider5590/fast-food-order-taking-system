# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/fast-food
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-database-password

# Hikari Connection Pool Settings (Optional)
HIKARI_MIN_IDLE=10
HIKARI_MAX_POOL_SIZE=20
HIKARI_MAX_LIFETIME_MS=900000
HIKARI_CONNECTION_TIMEOUT_MS=150000
HIKARI_IDLE_TIMEOUT_MS=30000
HIKARI_LEAK_DETECTION_THRESHOLD_MS=60000

# JWT Security Configuration
JWT_SECRET_KEY=your-strong-jwt-secret-key-here-generate-random-string
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# API Key
API_KEY=your-api-key-here-generate-random-string

# Application Configuration (Optional)
BRAND_NAME=Fast Food Express
BRAND_LOCATION=Your Location
DEFAULT_BRANCH_ID=1

# Logging Configuration (Optional)
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=WARN

